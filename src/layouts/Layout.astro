---
import { podcastSettings } from '../config/settings';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{podcastSettings.title}</title>
		<meta name="description" content={podcastSettings.description} />
	</head>
	<body>
		<slot />
	</body>
</html>

<style define:vars={{ 
	background: podcastSettings.theme.colors.background, 
	text: podcastSettings.theme.colors.text 
}}>
	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100%;
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
		background-color: var(--background);
		color: var(--text);
	}
</style>
